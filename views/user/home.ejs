<%- include('../navbar_user') %>

<div class="row justify-content-center mt-5">
  <div class="col-md-8">
    <h3>List Gedung</h3>
    <br />
    <div class="row">
      <% result.forEach((gedung, i) => { %>
      <div class="col-md-3">
        <div class="card">
          <img
            src="/<%= gedung.img %>"
            class="card-img-top"
            style="width: 100%; height: 129px; object-fit: cover"
          />
          <div class="card-body">
            <a
              href="/gedung/<%= gedung.id %>"
              style="text-decoration: none; color: black"
            >
              <span class="card-text text-capitalize"><%= gedung.name %></span>
              <br />
              <span class="text-capitalize" style="font-size: 12px"
                >Lokasi : <%= gedung.kota %> </span
              ><br />
              <b class="card-text" style="font-size: 12px"
                >Harga Sewa : Rp<%= gedung.harga %></b
              >
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>
