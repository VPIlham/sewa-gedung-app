<%- include('../../navbar_admin') %>

<div class="row justify-content-center mt-5 mb-5">
  <div class="col-md-5">
    <h3>Edit Gedung</h3>
    <br />

    <div class="card p-3">
      <form
        action="/admin/gedung/edit-gedung/<%= result.id %>"
        method="post"
        enctype="multipart/form-data"
      >
        <!-- Nama Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Nama Gedung</label>
          </div>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control"
              name="name"
              id="inputNama"
              value="<%= result.name %>"
              required
            />
          </div>
        </div>
        <br />
        <!-- Harga Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Harga Sewa Gedung</label>
          </div>
          <div class="col-sm-8">
            <input
              type="number"
              class="form-control"
              name="harga"
              id="inputHarga"
              value="<%= result.harga %>"
              required
            />
          </div>
        </div>
        <br />
        <!-- Kota -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Kota</label>
          </div>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control"
              name="kota"
              id="inputKota"
              value="<%= result.kota %>"
              required
            />
          </div>
        </div>
        <br />
        <!-- Jam Siang Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Jam Siang</label>
          </div>
          <div class="col-sm-8">
            <div class="row">
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_siang"
                  id="inputJamSiang"
                  value="<%= result.jam_siang %>"
                  required
                />
              </div>
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_siang_akhir"
                  id="inputJamSiang"
                  value="<%= result.jam_siang_akhir %>"
                  required
                />
              </div>
            </div>
          </div>
        </div>
        <br />
        <!-- Jam Malam Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Jam Malam</label>
          </div>
          <div class="col-sm-8">
            <div class="row">
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_malam"
                  id="inputJamMalam"
                  value="<%= result.jam_malam %>"
                  required
                />
              </div>
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_malam_akhir"
                  id="inputJamMalam"
                  value="<%= result.jam_malam_akhir %>"
                  required
                />
              </div>
            </div>
          </div>
        </div>
        <br />
        <!-- Fasilitas -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Fasilitas</label>
          </div>
          <div class="col-sm-8">
            <textarea name="fasilitas" class="form-control" rows="5">
<%= result.fasilitas %></textarea
            >
          </div>
        </div>
        <br />
        <!-- Alamat -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Alamat</label>
          </div>
          <div class="col-sm-8">
            <textarea name="alamat" class="form-control" rows="3">
<%= result.alamat %></textarea
            >
          </div>
        </div>
        <br />
        <!-- Status -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Status</label>
          </div>
          <div class="col-sm-8">
            <select class="form-select" name="status" aria-label="Default select example">
              <option value="tersedia" <%= result.status == 'tersedia' ? 'selected': '' %>>Tersedia</option>
              <option value="tutup" <%= result.status == 'tutup' ? 'selected': '' %>>Tutup</option>
            </select>
          </div>
        </div>
        <br />
        <!-- Upload Gambar -->
        <fieldset>
          <legend>Upload Gambar</legend>
          <p>
            <label>File: </label>
            <input type="file" name="img" accept="image/*" />
            <br />
            <img class="mt-3" src="/<%= result.img %>" style="width: 30%" />
          </p>
        </fieldset>
        <br />
        <input
          type="submit"
          value="Ubah"
          class="btn btn-success float-left"
        />
        <a href="/admin/gedung" class="btn btn-primary">Kembali</a>
      </form>
    </div>
  </div>
</div>
