<%- include('../../navbar_admin') %>

<div class="row justify-content-center mt-5 mb-5">
  <div class="col-md-5">
    <h3>Tambah Gedung</h3>
    <br />

    <div class="card p-3">
      <form
        action="/admin/gedung/tambah-gedung"
        method="post"
        enctype="multipart/form-data"
      >
        <!-- Nama Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Nama Gedung</label>
          </div>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control"
              name="name"
              id="inputNama"
              required
            />
          </div>
        </div>
        <br />
        <!-- Harga Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Harga Sewa Gedung</label>
          </div>
          <div class="col-sm-8">
            <input
              type="number"
              class="form-control"
              name="harga"
              id="inputHarga"
              required
            />
          </div>
        </div>
        <br />
        <!-- Kota -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Kota</label>
          </div>
          <div class="col-sm-8">
            <input
              type="text"
              class="form-control"
              name="kota"
              id="inputKota"
              required
            />
          </div>
        </div>
        <br />
        <!-- Jam Siang Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Jam Siang</label>
          </div>
          <div class="col-sm-8">
            <div class="row">
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_siang"
                  id="inputJamSiang"
                  required
                />
              </div>
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_siang_akhir"
                  id="inputJamSiang"
                  required
                />
              </div>
            </div>
          </div>
        </div>
        <br />
        <!-- Jam Malam Gedung -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Jam Malam</label>
          </div>
          <div class="col-sm-8">
            <div class="row">
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_malam"
                  id="inputJamMalam"
                  required
                />
              </div>
              <div class="col-5">
                <input
                  type="time"
                  class="form-control"
                  name="jam_malam_akhir"
                  id="inputJamMalam"
                  required
                />
              </div>
            </div>
          </div>
        </div>
        <br />
        <!-- Fasilitas -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Fasilitas</label>
          </div>
          <div class="col-sm-8">
            <textarea name="fasilitas" class="form-control" rows="5"></textarea>
          </div>
        </div>
        <br />
        <!-- Alamat -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Alamat</label>
          </div>
          <div class="col-sm-8">
            <textarea name="alamat" class="form-control" rows="3"></textarea>
          </div>
        </div>
        <br />
        <!-- Status -->
        <div class="row">
          <div class="col-sm-4 col-form-label">
            <label for="staticEmail">Status</label>
          </div>
          <div class="col-sm-8">
            <select
              class="form-select"
              name="status"
              aria-label="Default select example"
            >
              <option value="tersedia">Tersedia</option>
              <option value="tutup">Tutup</option>
            </select>
          </div>
        </div>
        <br />
        <fieldset>
          <legend>Upload Gambar</legend>
          <p>
            <label>File: </label>
            <input type="file" name="img" required accept="image/*" />
          </p>
        </fieldset>
        <br />
        <input
          type="submit"
          value="Simpan"
          class="btn btn-success float-left"
        />
        <a href="/admin/gedung" class="btn btn-primary">Kembali</a>
      </form>
    </div>
  </div>
</div>
