<%- include('../../navbar_admin') %>

<div class="row justify-content-center mt-5">
  <div class="col-md-9">
    <a href="/admin/users/tambah" class="btn btn-success"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-file-earmark-plus"
        viewBox="0 0 16 16"
      >
        <path
          d="M8 6.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 .5-.5z"
        ></path>
        <path
          d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z"
        ></path>
      </svg>
      Tambah Data User</a
    >
    <a href="/admin/users/print" class="btn btn-warning">Cetak PDF</a>
    <table class="table table-striped table-hover" id="mytable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Nama</th>
          <th scope="col">Email</th>
          <th scope="col">Nomor HP</th>
          <th scope="col">Alamat</th>
          <th scope="col">Level</th>
          <th scope="col">Jenis Kelamin</th>
          <th scope="col">Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% result.forEach((user, i) => { %>
        <tr>
          <th scope="row"><%= i + 1 %></th>
          <td class="text-capitalize"><%= user.name %></td>
          <td><%= user.email %></td>
          <td class="text-capitalize"><%= user.nomor_hp %></td>
          <td><%= user.alamat %></td>
          <td class="text-capitalize"><%= user.level %></td>
          <td class="text-capitalize">
            <%= user.jk == 0 ? 'Perempuan' : 'Laki-laki' %>
          </td>
          <td>
            <a
              href="/admin/users/edit/<%= user.id %>"
              class="badge text-bg-primary text-decoration-none"
              >Edit</a
            >
            | <% if(user.level !== 'admin'){ %>
            <a
              href="/admin/users/hapus/<%= user.id %>"
              class="badge text-bg-danger text-decoration-none"
              >Hapus</a
            >
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
