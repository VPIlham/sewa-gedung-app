<%- include('../../navbar_admin') %>

<div class="row justify-content-center mt-5">
  <div class="col-md-5">
    <div class="card p-5">
      <h3>Edit User</h3>
      <div class="row">
        <form action="/admin/users/edit/<%= result.id %>" method="post">
          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input
              type="email"
              class="form-control"
              id="exampleInputEmail1"
              placeholder="email"
              name="email"
              value="<%= result.email %>"
            />
          </div>
          <div class="form-group mt-2">
            <label>Nama</label>
            <input
              type="text"
              class="form-control"
              placeholder="nama"
              name="name"
              value="<%= result.name %>"
            />
          </div>
          <div class="form-group mt-2">
            <label>Nomor Telp</label>
            <input
              type="text"
              class="form-control"
              placeholder="No Telp"
              name="nomor_hp"
              value="<%= result.nomor_hp %>"
            />
          </div>
          <div class="form-group mt-2">
            <label>Alamat</label>
            <input
              type="text"
              class="form-control"
              name="alamat"
              placeholder="Alamat"
              value="<%= result.alamat %>"
            />
          </div>
          <button type="submit" class="btn btn-success mt-3">Edit User</button>
          <a href="/admin/users" class="btn btn-primary mt-3">Kembali</a>
        </form>
      </div>
    </div>
  </div>
</div>
